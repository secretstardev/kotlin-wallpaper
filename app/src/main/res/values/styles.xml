<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/darker_gray</item>

        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">
            @bool/light_navigation_bar
        </item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="AppSearchText" parent="Widget.AppCompat.SearchView">
        <item name="android:maxLength">20</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:editTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="TextDefault" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:shadowColor">@color/colorPrimaryInverseTrans25</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="TextLarge" parent="TextDefault">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextMedium" parent="TextDefault">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextSmall" parent="TextDefault">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextSmallBold" parent="TextSmall">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSmallLight" parent="TextSmall">
        <item name="android:textColor">@color/colorPrimaryTrans75</item>
    </style>

</resources>